<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f2c7d1"
    tools:context="com.lss.demo_order.MenuActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f2b4dd"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点单页  "
                android:textStyle="italic"
                android:textSize="30dp"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐桌号:"
                android:textSize="20dp"
                android:id="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:id="@+id/tid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 订单号:"
                android:textSize="20dp"
                android:id="@+id/textView13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:id="@+id/oid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 会员号:"
                android:textSize="20dp"
                android:id="@+id/textView15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:id="@+id/hid" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:background="#f2d2e8"
                android:id="@+id/gwc" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eec4c7"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:id="@+id/lineFenlei"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:textSize="30dp"
                    android:layout_marginLeft="7dp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:id="@+id/textView9" />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/qingcai"
                    android:src="@drawable/shucai" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="青菜类"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:id="@+id/textView3" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/junlei"
                    android:src="@drawable/junlei" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="菌菇类"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:id="@+id/textView4" />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/roulei"
                    android:src="@drawable/roulei" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="涮肉类"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:id="@+id/textView5" />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/haixian"
                    android:src="@drawable/haixian" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="海鲜类"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:id="@+id/textView6" />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/guodi"
                    android:src="@drawable/guodi" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="锅底类"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:id="@+id/textView7" />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.9"
                    android:id="@+id/qita"
                    android:src="@drawable/qita" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他类"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textStyle="italic"
                    android:id="@+id/textView8" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fce4e5"
                android:id="@+id/lineList"
                >

                <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="400dp"
        android:layout_marginStart="400dp" />
</RelativeLayout>
