<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2c7d1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类"
        android:textSize="30dp"
        android:layout_marginLeft="7dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:id="@+id/textView9" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/qingcai"
        android:src="@drawable/shucai" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="青菜类"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:id="@+id/textView3" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/junlei"
        android:src="@drawable/junlei" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="菌菇类"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:id="@+id/textView4" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/roulei"
        android:src="@drawable/roulei" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="涮肉类"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:id="@+id/textView5" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/haixian"
        android:src="@drawable/haixian" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海鲜类"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:id="@+id/textView6" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/huodi"
        android:src="@drawable/guodi" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="锅底类"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:id="@+id/textView7" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:id="@+id/qita"
        android:src="@drawable/qita" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他类"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:id="@+id/textView8" />



</LinearLayout>